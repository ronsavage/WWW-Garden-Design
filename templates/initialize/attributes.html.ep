<table align = 'center'>
	<tr>
		<td colspan = '2'><div class = 'blue_centered'>Attributes</div><br /></td>
	</tr>
	<tr>
		<td align = 'centered'>Common name: </td><td><span class = 'blue_centered' id = 'attribute_common_name'></span></td>
	</tr>
	<tr>
		<td align = 'centered'>Scientific name: </td><td><span class = 'blue_centered' id = 'attribute_scientific_name'></span></td>
	</tr>
	<tr>
		<td colspan = '2'><hr></td>
	</tr>
</table>

<table align = 'center'>
	<tr>
		<td colspan = '2'>
			<span class = 'alert'>Poison Alert!</span>
			You should of course double-check if not triple-check any suggestion that any part of a plant is edible
		</td>
	</tr>
	<tr>
		<td colspan = '2'><hr></td>
	</tr>
	% for my $check_box (@$attribute_check_boxes) {
	<tr>
		<td><%== $$check_box[0] %>:</td>
		<td>
			<%== $$check_box[1] %>
		</td>
	</tr>
	<tr>
		<td colspan = '2'><hr></td>
	</tr>
	% }
</table>
