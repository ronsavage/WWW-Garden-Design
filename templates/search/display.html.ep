% if (my $error = stash 'error') {

	<table align = 'center'>
		<tr>
			<td class = 'error'><br /><br />Error: <%= $error %></td>
		</tr>
	</table>

% } else {

	<table align = 'center'>
		<tr>
			<td>Search time: </td>
			<td align = 'right'>
			%== $elapsed_time
			</td>
			<td> seconds</td>
		</tr>
		<tr>
			<td>Match count: </td>
			<td align = 'right'>
			%== $match_count
			</td>
			<td> hit<%= $match_count == 1 ? '' : 's' %></td>
	</table>

	% if ($result_html) {

	<table align = 'center' class = 'datatable' id = 'search_result_table'>
		<thead>
			<tr>
				<th>#</th>
				<th>Native</th>
				<th>Scientific name</th>
				<th>Common name</th>
				<th>Aliases</th>
				<th>H x W</th>
				<th>Edit <span class = 'alert'>(clickable)</span></th>
			</tr>
		</thead>
		<tbody>
		%== $result_html
		</tbody>
		<tfoot>
			<tr>
				<th>#</th>
				<th>Native</th>
				<th>Scientific name</th>
				<th>Common name</th>
				<th>Aliases</th>
				<th>H x W</th>
				<th>Edit</th>
			</tr>
		</tfoot>
	</table>

	% }

% }
