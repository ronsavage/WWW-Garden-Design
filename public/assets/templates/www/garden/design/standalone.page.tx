						{
							return 'Page ' + currentPage + ' of ' + totalPage + ', showing '
								+ firstRow + ' .. ' + lastRow + ' out of ' + totalRow;
						},
		'filters':      [false, true, true, true, true, false],
		'filterText':   'Filter...',
		'forceStrings': true,
		'pageSize':     200,
		'sort':         '*'
	});
});
